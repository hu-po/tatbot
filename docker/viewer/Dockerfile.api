FROM python:3.11-slim
WORKDIR /app
COPY tatbot/viewer/ /app/

# 1) libGL for usd-core, 2) openusd wheel exposes the pxr module
RUN apt-get update && \
    apt-get install -y --no-install-recommends libgl1 && \
    rm -rf /var/lib/apt/lists/* && \
    pip install --no-cache-dir \
        fastapi \
        uvicorn[standard] \
        usd2gltf \
        usd-core==24.05

EXPOSE 8000
CMD ["uvicorn", "backend:app", "--host", "0.0.0.0", "--port", "8000"]