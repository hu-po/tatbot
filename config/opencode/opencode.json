{
    "$schema": "https://opencode.ai/config.json",
    "keybinds": {},
    "model": "qwen3:30b",
    "instructions": ["~/tatbot/.cursor/rules/*.md", "~/tatbot/config/opencode/AGENTS.md"],
    "agent": {
      "code-editor": {
        "description": "Edits code, writing new code, modifying existing code",
        "prompt": "You are a code editor. You can edit code, write new code, and modify existing code.",
        "model": "ollama/gpt-oss:20b",
        "tools": {
          "bash": true,
          "edit": true,
          "webfetch": true,
          "glob": true,
          "grep": true,
          "list": true,
          "read": true,
          "write": true,
          "task": true
        }
      },
      "code-reviewer": {
        "description": "Reviews code for best practices and potential issues",
        "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
        "model": "ollama/gpt-oss:20b",
        "tools": {
          "bash": false,
          "edit": false,
          "webfetch": true,
          "glob": true,
          "grep": true,
          "list": true,
          "read": true,
          "write": false,
          "task": false
        }
      }
    },
    "provider": {
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "options": {
                "baseURL": "http://192.168.1.96:11434/v1"
            },
            "models": {
                "gpt-oss:20b": {
                    "completion": true,
                    "tools": true,
                    "reasoning": true
                },
                "qwen3:30b": {
                  "completion": true,
                  "tools": true,
                  "thinking": true
              }
            }
        }
    },
    "mcp": {
        "tatbot.ook": {
          "type": "remote",
          "url": "http://192.168.1.90:8000/mcp",
          "enabled": true
        },
        "tatbot.oop": {
          "type": "remote",
          "url": "http://192.168.1.51:8000/mcp",
          "enabled": true
        },
        "tatbot.ojo": {
          "type": "remote",
          "url": "http://192.168.1.96:8000/mcp",
          "enabled": true
        },
        "tatbot.trossen-ai": {
          "type": "remote",
          "url": "http://192.168.1.97:8000/mcp",
          "enabled": true
        },
        "tatbot.rpi1": {
          "type": "remote",
          "url": "http://192.168.1.98:8000/mcp",
          "enabled": true
        },
        "tatbot.rpi2": {
          "type": "remote",
          "url": "http://192.168.1.99:8000/mcp",
          "enabled": true
        }
      }
}