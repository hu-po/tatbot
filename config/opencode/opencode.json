{
    "$schema": "https://opencode.ai/config.json",
    "keybinds": {},
    "model": "ollama/qwen3:30b",
    "instructions": ["~/tatbot/.cursor/rules/*.md", "~/tatbot/config/opencode/AGENTS.md"],
    "provider": {
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "options": {
                "baseURL": "http://192.168.1.96:11434/v1"
            },
            "models": {
                "gpt-oss:20b": {
                    "completion": true,
                    "tools": true,
                    "reasoning": true
                },
                "qwen3:30b": {
                  "completion": true,
                  "tools": true,
                  "thinking": true
              }
            }
        },
        "anthropic": {
            "options": {
              "apiKey": "{env:ANTHROPIC_API_KEY}"
            }
        },
        "google": {
            "options": {
              "apiKey": "{env:GEMINI_API_KEY}"
            }
        }
    },
    "mcp": {
        "tatbot.ook": {
          "type": "remote",
          "url": "http://192.168.1.90:8000/mcp",
          "enabled": true
        },
        "tatbot.oop": {
          "type": "remote",
          "url": "http://192.168.1.51:8000/mcp",
          "enabled": true
        },
        "tatbot.ojo": {
          "type": "remote",
          "url": "http://192.168.1.96:8000/mcp",
          "enabled": true
        },
        "tatbot.trossen-ai": {
          "type": "remote",
          "url": "http://192.168.1.97:8000/mcp",
          "enabled": true
        },
        "tatbot.rpi1": {
          "type": "remote",
          "url": "http://192.168.1.98:8000/mcp",
          "enabled": true
        },
        "tatbot.rpi2": {
          "type": "remote",
          "url": "http://192.168.1.99:8000/mcp",
          "enabled": true
        }
      }
}