[Unit]
Description=Intel GPU Exporter (container)
After=docker.service
Requires=docker.service

[Service]
ExecStart=/usr/bin/docker run --rm --privileged --net host --name intel-gpu-exporter \
  -v /sys:/sys:ro -v /dev/dri:/dev/dri \
  restreamio/intel-prometheus:latest
ExecStop=/usr/bin/docker stop intel-gpu-exporter
Restart=always

[Install]
WantedBy=multi-user.target

