# Redis Parameter Server Configuration
# Add these variables to your .env file on all nodes

# Redis connection settings
REDIS_HOST=eek
REDIS_PORT=6379
REDIS_PASSWORD=your_generated_password_here
REDIS_DB=0

# State management settings  
STATE_HEARTBEAT_INTERVAL=30    # seconds
STATE_RETRY_ATTEMPTS=3
STATE_RETRY_DELAY=1.0         # seconds
STATE_CONNECTION_TIMEOUT=10   # seconds

# Redis memory and performance settings
REDIS_MAX_CONNECTIONS=20
REDIS_CONNECTION_POOL_SIZE=10

# Enable state synchronization by default
TATBOT_STATE_SYNC_ENABLED=true

# Debug settings
REDIS_DEBUG=false
STATE_DEBUG=false