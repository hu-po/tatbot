[Unit]
Description=Tatbot Strokebatch Server
After=network.target

[Service]
Type=simple
User=oop
WorkingDirectory=/home/oop/tatbot
Environment=PATH=/home/oop/tatbot/.venv/bin
ExecStart=/home/oop/tatbot/.venv/bin/python scripts/strokebatch_server.py --host 0.0.0.0 --port 5000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target 